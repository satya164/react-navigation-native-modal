{
  "name": "react-navigation-native-modal",
  "version": "0.1.9",
  "description": "React Navigation integration for React Native's Modal component",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index.tsx",
  "source": "src/index.tsx",
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "android",
    "ios",
    "cpp",
    "react-navigation-native-modal.podspec",
    "!lib/typescript/example"
  ],
  "scripts": {
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn workspace react-navigation-native-modal-example"
  },
  "keywords": [
    "react-native",
    "react-navigation",
    "ios",
    "android",
    "expo",
    "modal"
  ],
  "repository": "https://github.com/satya164/react-navigation-native-modal",
  "author": "Satyajit Sahoo <satyajit.happy@gmail.com> (https://github.com/satya164)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/satya164/react-navigation-native-modal/issues"
  },
  "homepage": "https://github.com/satya164/react-navigation-native-modal#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^18.1.0",
    "@evilmartians/lefthook": "^1.5.2",
    "@react-navigation/native": "^6.1.9",
    "@release-it/conventional-changelog": "^7.0.2",
    "@testing-library/react-native": "^12.3.2",
    "@types/jest": "^29.5.7",
    "@types/react": "^18.2.33",
    "@types/react-native": "0.72.5",
    "commitlint": "^18.2.0",
    "eslint": "^8.52.0",
    "eslint-config-satya164": "^3.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "react": "18.2.0",
    "react-native": "0.72.6",
    "react-native-builder-bob": "^0.23.1",
    "react-test-renderer": "^18.2.0",
    "release-it": "^16.2.1",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "@react-navigation/native": "^6.0.0",
    "react": "*",
    "react-native": "*"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@4.0.1",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits"
        },
        "infile": "CHANGELOG.md"
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "satya164"
    ],
    "settings": {
      "import/core-modules": [
        "react-navigation-native-modal"
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
